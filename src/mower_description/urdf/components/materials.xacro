<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <!-- 
    Materials Component
    
    This file defines all material colors and properties used throughout
    the mower robot model. Centralizing materials here allows for easy
    color scheme changes and consistent appearance across all components.
  -->

  <!-- Blue material for chassis -->
  <material name="blue">
    <color rgba="0.0 0.0 1.0 1.0"/>
  </material>
  
  <!-- Red material for reel motor -->
  <material name="red">
    <color rgba="1.0 0.0 0.0 1.0"/>
  </material>
  
  <!-- Green material for cutting reel -->
  <material name="green">
    <color rgba="0.0 1.0 0.0 1.0"/>
  </material>
  
  <!-- Gray material for counterweight -->
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>
  
  <!-- Black material for wheels -->
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  
  <!-- White material for front roller -->
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>
  
  <!-- Purple material for IMU -->
  <material name="purple">
    <color rgba="0.5 0.0 0.5 1.0"/>
  </material>
  
  <!-- Orange material for GPS -->
  <material name="orange">
    <color rgba="1.0 0.5 0.0 1.0"/>
  </material>

</robot>
